
@{
    Layout = null;
}

<!DOCTYPE html>
@*new { onsubmit = "return SubmitForm(this)" },*@
@model HTquanlyNCKH.Models.Slider
@using (Html.BeginForm("SliderStoreOrEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.sliderID)
    @Html.HiddenFor(model => model.sldCreateDate)
    @Html.HiddenFor(model => model.sldModifierDate)



    @Html.HiddenFor(model => model.sldCreateUser)
    @Html.HiddenFor(model => model.ModifierUser)
    @Html.HiddenFor(model => model.sldImage)
    @Html.AntiForgeryToken()


    <div class="form-group" style="float: left; margin: 10px">
        @Html.LabelFor(model => model.sldH5, "Tên Trường", new { @class = "control-label" })
        @Html.EditorFor(model => model.sldH5, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.sldH5)
    </div>

    <div class="form-group" style="float: left; margin: 10px">
        @Html.LabelFor(model => model.sldH1, "Tiêu Đề", new { @class = "control-label" })
        @Html.EditorFor(model => model.sldH1, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.sldH5)
    </div>


    <div class="form-group" style="float: left; margin: 10px">

        @Html.LabelFor(model => model.sldDescription, "Mô Tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.sldDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.sldDescription)
    </div>


    <div class="form-group" style="clear: both; margin: 10px">
        @Html.LabelFor(model => model.sldContent, "Nội dung", new { @class = "control-label" })
        @Html.EditorFor(model => model.sldContent, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.sldContent)
    </div>


    @*<div class="form-group">
            <label>Ảnh bìa</label>
            @Html.EditorFor(model => model.sldImage, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
            @Html.ValidationMessageFor(model => model.sldImage, "", new { @class = "text-danger" })
        </div>*@

    <div class="form-group" style="clear: both; margin: 10px">
        <label>Ảnh bìa</label>
        @if (Model.sldImage == null)
        {
            <img src="~/Content/dist/img/MacDinh2.jpg" width="150" height="150" style="margin: 10px" />
        }
        else
        {
            <img src="~/Content/dist/img/@Model.sldImage" width="150" height="150" style="margin: 10px" />
        }

        <div class="editor-field">
            @Html.TextBoxFor(model => model.sldImage, new { type = "file" })
            @Html.ValidationMessageFor(model => model.sldImage)
        </div>
    </div>

    <div class="form-group" style="float: left; margin: 10px">
        <p style="color: #ff0000">@ViewBag.Message</p>
        <input type="submit" value="Lưu lại" class="btn btn-success " />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}  