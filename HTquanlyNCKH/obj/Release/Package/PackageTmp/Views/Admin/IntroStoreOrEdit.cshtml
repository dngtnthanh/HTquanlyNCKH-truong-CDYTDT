
@{
    Layout = null;
}

<!DOCTYPE html>
@model HTquanlyNCKH.Models.Intro
@using (Html.BeginForm("IntroStoreOrEdit", "Admin", FormMethod.Post, new { onsubmit = "return SubmitForm(this)", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.introID)
    @Html.HiddenFor(model => model.itdCreateDate)
    @Html.HiddenFor(model => model.itdModifierDate)

    @Html.HiddenFor(model => model.itdCreateUser)
    @Html.HiddenFor(model => model.itdModifierUser)



    <div class="form-group">
        @Html.LabelFor(model => model.itdName, "Tiêu đề", new { @class = "control-label" })
        @Html.EditorFor(model => model.itdName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.itdName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.itdSummary, "Mô tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.itdSummary, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.itdSummary)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.itdIcon, "Biểu tượng", new { @class = "control-label" }) 
        <a href="#" onclick="PopupForm('@Url.Action("GetIconSupport", "Admin")')">
            <i class="fas fa-question"></i>
        </a>
        @Html.EditorFor(model => model.itdIcon, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.itdIcon)
    </div>



    <div class="form-group">
        <p style="color: #ff0000">@ViewBag.Message</p>
        <input type="submit" value="Lưu lại" class="btn btn-success " />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}  