
@{
    Layout = null;
}

<!DOCTYPE html>
@model HTquanlyNCKH.Models.Field
@using (Html.BeginForm("FieldStoreOrEdit", "Topic", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.fieldID)
    @Html.HiddenFor(model => model.fieCreateDate)
    @Html.HiddenFor(model => model.fieModifierDate)


    <div class="form-group">
        @Html.LabelFor(model => model.fieName, "Tên lĩnh vực", new { @class = "control-label" })
        @Html.EditorFor(model => model.fieName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.fieName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fieDescription, "Mô tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.fieDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.fieDescription)
    </div>
    <div class="form-group">

        <input type="submit" value="Lưu lại" class="btn btn-success" />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}