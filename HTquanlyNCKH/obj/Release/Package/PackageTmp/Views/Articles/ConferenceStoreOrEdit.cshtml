
@{
    Layout = null;
}

<!DOCTYPE html>
@model HTquanlyNCKH.Models.Conference
@using (Html.BeginForm("ConferenceStoreOrEdit", "Articles", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.conferenceID)
    @Html.HiddenFor(model => model.cfrCreateDate)
    @Html.HiddenFor(model => model.cfrModifierDate)

    @Html.HiddenFor(model => model.cfrCreateUser)
    @Html.HiddenFor(model => model.cfrModifierUser)

    <div class="form-group">
        @Html.LabelFor(model => model.cfrName, "Tên Hội Nghị", new { @class = "control-label" })
        @Html.EditorFor(model => model.cfrName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.cfrName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cfrDescription, "Mô Tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.cfrDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.cfrDescription)
    </div>
    <div class="form-group">

        <input type="submit" value="Lưu lại" class="btn btn-success " />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}  