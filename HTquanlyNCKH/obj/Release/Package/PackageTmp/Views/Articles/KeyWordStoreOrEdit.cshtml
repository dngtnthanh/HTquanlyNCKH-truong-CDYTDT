
@{
    Layout = null;
}

<!DOCTYPE html>
@model HTquanlyNCKH.Models.KeyWord
@using (Html.BeginForm("KeyWordStoreOrEdit", "Articles", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.keyID)
    @Html.HiddenFor(model => model.keyCreateDate)
    @Html.HiddenFor(model => model.keyModifierDate)

    @Html.HiddenFor(model => model.keyCreateUser)
    @Html.HiddenFor(model => model.keyModifierUser)

    <div class="form-group">
        @Html.LabelFor(model => model.keyName, "Tên Từ Khoá", new { @class = "control-label" })
        @Html.EditorFor(model => model.keyName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.keyName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.keyDescription, "Mô Tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.keyDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.keyDescription)
    </div>
    <div class="form-group">

        <input type="submit" value="Lưu lại" class="btn btn-success " />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}  