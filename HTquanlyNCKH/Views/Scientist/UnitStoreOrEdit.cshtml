
@{
    Layout = null;
}

<!DOCTYPE html>
@model HTquanlyNCKH.Models.Unit
@using (Html.BeginForm("UnitStoreOrEdit", "Scientist", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.unitID)
    @Html.HiddenFor(model => model.untCreateDate)
    @Html.HiddenFor(model => model.untModifierDate)

    @Html.HiddenFor(model => model.untCreateUser)
    @Html.HiddenFor(model => model.untModifierUser)

    <div class="form-group">
        @Html.LabelFor(model => model.untName, "Tên đơn vị", new { @class = "control-label" })
        @Html.EditorFor(model => model.untName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.untName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.untDescription, "Mô tả", new { @class = "control-label" })
        @Html.EditorFor(model => model.untDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.untDescription)
    </div>
    <div class="form-group">

        <input type="submit" value="Lưu lại" class="btn btn-success " />
        <input type="reset" value="Làm mới" class="btn btn-warning" />
    </div>
}  