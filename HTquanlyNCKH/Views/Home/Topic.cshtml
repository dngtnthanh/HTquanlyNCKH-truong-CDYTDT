
@{
    ViewBag.Title = "Đề Tài Nghiên Cứu";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Slider{
    <img src="~/Content/dist/img/23 3 2022 5.png" width="100%" />
}
@using HTquanlyNCKH.Models;
@model PagedList.IPagedList<HTquanlyNCKH.Models.TopicFull>
@using PagedList.Mvc;
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3" style="margin-bottom: 60px">Trường Cao Đẳng Y Tế Đồng Tháp</h6>

        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">


                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="~/Content/dist/img/course-1.jpg" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a onclick="PopupForm('@Url.Action("TopicInfor", "Home", new { id = item.topicID})')" @*onclick="PopupForm('@Url.Action("TopicStoreOrEdit","Topic")')"*@ class="flex-shrink-0 btn btn-sm btn-primary px-2 border-end" style="border-radius: 30px 0 0 30px;">Xem Đề Tài</a>
                                <a onclick="PopupForm('@Url.Action("ScientistInfor", "Home", new { id = item.scientistID})')" class="flex-shrink-0 btn btn-sm btn-primary px-2" style="border-radius: 0 30px 30px 0;">Lý lịch nhà khoa học</a>
                            </div>
                        </div>



                        <div class="text-center p-4 pb-0">
                            <h3 class="mb-0" style="min-height: 100px">@item.tpcName</h3>
                            <div class="mb-3">
                                <small> Lĩnh vực @item.fieldName</small>
                            </div>
                            <h5 class="mb-4">Năm @item.tpcYear</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.scientistName</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.tpcYear</small>
                            <small class="flex-fill text-center py-2"><i class="fas fa-info text-primary me-2"></i> @item.statusName</small>
                        </div>
                    </div>
                </div>
            }
            <nav id="phanTrang" style="float: left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Topic", "Home", new { pageID = page }))
            </nav>



        </div>
    </div>
</div>


@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    <script src="~/Content/dist/js/jquery.dataTables.min.js"></script>

    <script>

        var Popup, dataTable;

        $(document).ready(function () {
            //Hai dòng dưới để chỉnh cho khai báo jquery trước boostrap (hiện nút close)
            var bootstrapButton = $.fn.button.noConflict() // return $.fn.button to previously assigned value
            $.fn.bootstrapBtn = bootstrapButton            // give $().bootstrapBtn the Bootstrap functionality
        });



        function PopupForm(url) {

            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {

                    formDiv.html(response);

                    Popup = formDiv.dialog({

                        autoOpen: true,
                        resizable: false,
                        title: 'Thông Tin Về Đề Tài',
                        height: 500,
                        width: 550,
                        close: function () {

                            Popup.dialog('destroy').remove();
                        }

                    });

                });
        }




    </script>

}