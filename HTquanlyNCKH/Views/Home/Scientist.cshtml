
@{
    ViewBag.Title = "Nhà Khoa Học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HTquanlyNCKH.Models
@model PagedList.IPagedList<HTquanlyNCKH.Models.ScientistFull>
@using PagedList.Mvc;
@section Slider{
    <img src="~/Content/dist/img/23 3 2022 5.png" width="100%" />
}
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Thông Tin</h6>
            <h1 class="mb-5">Nhà Khoa Học</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="~/Content/dist/img/team-1.jpg" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.sctFirstName @item.sctLastName</h5>
                            <small>Trình độ: @item.degreeName </small>
                        </div>
                    </div>
                </div>
            }
            <nav  id="phanTrang" style="float: left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Scientist", "Home", new { pageID = page }))
            </nav>            
        </div>
    </div>
</div>
<!-- Team End -->
