
@{
    ViewBag.Title = "Nhà Khoa Học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HTquanlyNCKH.Models
@model PagedList.IPagedList<HTquanlyNCKH.Models.ScientistFull>
@using PagedList.Mvc;
@section Slider{
    <img src="~/Content/dist/img/23 3 2022 5.png" width="100%" />
}
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 style="margin-bottom: 50px" class="section-title bg-white text-center text-primary px-3">Trường Cao Đẳng Y Tế Đồng Tháp</h6>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img width="336" height="336" class="img-fluid" src="~/Content/dist/img/@item.sctImage" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                <a class="btn btn-sm btn-primary" onclick="PopupForm('@Url.Action("ScientistInfor", "Home", new { id = item.scientistID})')"><i class="fas fa-info"></i> Thông tin</a>

                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.sctFirstName @item.sctLastName</h5>
                            <small>Trình độ: @item.degreeName </small>
                        </div>
                    </div>
                </div>
            }
            <nav id="phanTrang" style="float: left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Scientist", "Home", new { pageID = page }))
            </nav>
        </div>
    </div>
</div>
<!-- Team End -->

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    <script src="~/Content/dist/js/jquery.dataTables.min.js"></script>

    <script>

        var Popup, dataTable;

        $(document).ready(function () {
            //Hai dòng dưới để chỉnh cho khai báo jquery trước boostrap (hiện nút close)
            var bootstrapButton = $.fn.button.noConflict() // return $.fn.button to previously assigned value
            $.fn.bootstrapBtn = bootstrapButton            // give $().bootstrapBtn the Bootstrap functionality
        });



        function PopupForm(url) {

            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {

                    formDiv.html(response);

                    Popup = formDiv.dialog({

                        autoOpen: true,
                        resizable: false,
                        title: 'Thông Tin Nhà Khoa Học',
                        height: 500,
                        width: 550,
                        close: function () {

                            Popup.dialog('destroy').remove();
                        }

                    });

                });
        }




    </script>

}