
@{
    ViewBag.Title = "Bài báo quốc tế";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bài báo quốc tế</h2>

<div class="form-control">


    <table id="ArticlesTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="10px">STT</th>
                <th>Tên bài</th>
                <th>Tóm lược</th>
                <th>Mã số</th>
                <th>Từ trang</th>
                <th>Liên kết</th>
                <th><i class="fa-solid fa-screwdriver-wrench"></i> Tuỳ Chọn</th>
            </tr>
        </thead>
        <tr>
            <td></td>
        </tr>
    </table>
</div>

@section scripts{


    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    <script src="~/Content/dist/js/jquery.dataTables.min.js"></script>

    <a href="@Url.Action()"></a>


    <script>

        var Popup, dataTable;

        $(document).ready(function () {
            //Hai dòng dưới để chỉnh cho khai báo jquery trước boostrap (hiện nút close)
            var bootstrapButton = $.fn.button.noConflict() // return $.fn.button to previously assigned value
            $.fn.bootstrapBtn = bootstrapButton            // give $().bootstrapBtn the Bootstrap functionality



            dataTable = $("#ArticlesTable").DataTable({
                /*"info": false,*/
                "ajax": {

                    "url": "/Articles/ArticlesGetData",
                    "type": "GET",
                    "datatype": "json"

                },

                "columns": [
                    { "defaultContent": "" },
                    { "data": "atlName" },
                    { "data": "atlSummary" },
                    { "data": "atlNumber" },
                    { "data": "atlPageToPage" },
                    { "data": "atlLink" },
                    {
                        "data": "articlesID", "render": function (data) {
                            return "<a class='btn btn-sm btn-info' onclick=PopupForm('@Url.Action("ArticlesPopup", "Home")/" + data + "')><i class='fa fa-pencil'></i> Xem</a>";
                            @*return "<a class='btn btn-sm btn-warning'  href='@Url.Action("ArticlesInfor", "Home")/" + data + "'><i class='fa fa-pencil'></i> Xem</a>  ";*@
                        },

                        "orderable": false,
                        "searchable": false,
                        "width": "150px",

                    },


                ],

                "language": {
                    "emptyTable": "Dữ liệu rỗng <b>Thêm mới </b> Button",
                    "formatNavigator": "<%= số trang %> / <%= trên trang %>",
                }

            });


        });

        function PopupForm(url) {

            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {

                    formDiv.html(response);

                    Popup = formDiv.dialog({

                        autoOpen : true,
                        resizable : false,
                        title : 'Thông Tin Bài Báo Quốc Tế',
                        height : 500,
                        width : 700,
                        close: function () {

                            Popup.dialog('destroy').remove();
                        }

                    });

                });
        }

        function SubmitForm(form) {

            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {

            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {

                    if (data.success) {

                        Popup.dialog('close');
                        dataTable.ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className:"success"
                        })
                    }
                }
                });
            }
            return false;
        }


    </script>
}
<style type='text/css'>

    table {
        counter-reset: rowNumber;
        counter-reset: number 1; /*mặc định số thứ tự bắt đầu*/
    }

        table tr {
            counter-increment: rowNumber;
        }

            table tr td:first-child::before {
                content: counter(rowNumber);
                min-width: auto;
                margin-right: 0.5em;
            }
</style>

