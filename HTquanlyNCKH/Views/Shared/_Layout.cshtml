    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="@Url.Action("index", "Home")" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <img style="margin-right: 8px" width="49" height="49" src="~/Content/dist/img/LOGOcdytDT.png" /><h2 class="m-0 text-primary">@*Trường Cao Đẳng Y Tế Đồng Tháp<br />*@Nghiên Cứu Khoa Học</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-1 p-lg-0">

                <a href="@Url.Action("index", "Home")" class="nav-item nav-link active"><i class="fas fa-home"></i> Trang Chủ</a>
                <a href="@Url.Action("About", "Home")" class="nav-item nav-link">Bài Báo</a>
                <a href="@Url.Action("Topic", "Home")" class="nav-item nav-link">Đề Tài Nghiên Cứu</a>
                <a href="@Url.Action("Scientist", "Home")" class="nav-item nav-link">@*<i class="fas fa-user-graduate"></i>*@ Nhà Khoa Học</a>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    @RenderSection("Slider", false)
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6" style="padding: 20px">
                        <h1 class="m-1">@ViewBag.Title</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6" style="font-size: 30px">
                        <ol class="breadcrumb float-sm-right" style="float: right; padding: 20px">
                            <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Trang Chủ</a></li>
                            <li class="breadcrumb-item active">@ViewBag.Title</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        @RenderBody()
    </div>
    <!-- Footer Start -->
